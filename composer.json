{
    "name": "hsm/wplite-plugin",
    "description": "WPLite plugin powered by WPlite",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "hsm/wplite": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Forooshyar\\": "src/"
        },
        "files": [
            "src/WPLite/Helpers/main.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
