{
    "name": "hsm/wplite-plugin",
    "description": "WPLite plugin powered by WPlite",
    "type": "wordpress-plugin",
    "require": {
        "hsm/wplite": "dev-main"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-faker": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Forooshyar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
